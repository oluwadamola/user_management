@model UserManagement.Models.Entities.RolePermission

@{
    ViewBag.Title = "AssignPermissionToRole";
}

<h2>AssignPermissionToRole</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>RolePermission</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.RoleId, new { @class = "control-label col-md-2" })
